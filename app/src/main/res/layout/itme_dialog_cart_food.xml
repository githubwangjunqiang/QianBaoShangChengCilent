<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pading_4">

    <TextView
        android:id="@+id/itme_dialog_cartfood_tvname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/pading_10"
        android:paddingRight="@dimen/pading_10"
        android:text="@string/app_name"
        android:textColor="@color/text_color_alp"
        android:textSize="@dimen/text_size_13sp" />

    <TextView
        android:id="@+id/itme_dialog_cartfood_tvnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/pading_14"
        android:text="0个"
        android:textColor="@color/text_color_alp"
        android:textSize="@dimen/text_size_13sp" />

    <TextView
        android:id="@+id/itme_dialog_cartfood_tvprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/pading_14"
        android:text="￥00"
        android:textColor="@color/app_color"
        android:textSize="@dimen/text_size_14sp" />
</LinearLayout>