<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/pading_30"
        android:layout_marginLeft="@dimen/pading_30"
        android:layout_height="wrap_content"
        android:background="@drawable/yuan_dialog_looding"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_10"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_20"
        android:paddingTop="@dimen/pading_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/pading_10"
            android:text="@string/zaixianzhifu"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="normal" />

        <RadioGroup
            android:id="@+id/dialog_ping_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pading_20"
            android:paddingRight="@dimen/pading_20">

            <RadioButton
                android:id="@+id/dialog_ping_rb0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pading_20"
                android:checked="true"
                android:drawableLeft="@mipmap/zhifubao"
                android:gravity="center_vertical"
                android:padding="@dimen/pading_10"
                android:text="@string/zhifubaozhifu"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

            <RadioButton
                android:id="@+id/dialog_ping_rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/weixin"
                android:gravity="center_vertical"
                android:padding="@dimen/pading_10"
                android:text="@string/weixinzhifu"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/dialog_ping_tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pading_10"
            android:layout_marginTop="@dimen/pading_10"
            android:text="@string/dingdanjine"
            android:textColor="@color/blue_p"
            android:textSize="@dimen/text_size_14sp" />

        <Button
            android:id="@+id/dialog_ping_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/pading_10"
            android:background="@color/blue"
            android:minHeight="0dp"
            android:paddingBottom="@dimen/pading_4"
            android:paddingLeft="@dimen/pading_20"
            android:paddingRight="@dimen/pading_20"
            android:paddingTop="@dimen/pading_4"
            android:text="@string/tijiao"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>
</RelativeLayout>