<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pading_4"
    android:paddingTop="@dimen/pading_4"
    android:paddingLeft="@dimen/pading_8">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:id="@+id/itme_evaluate_list_iviamge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY"
        tools:src="@mipmap/meishi" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_evaluate_list_tvname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/pading_10"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13sp"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/itme_evaluate_list_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:padding="@dimen/pading_10"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp"
                tools:text="0000-00-00" />
        </LinearLayout>

        <TextView
            android:id="@+id/itme_evaluate_list_tvcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/pading_4"
            android:padding="@dimen/pading_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_12sp"
            tools:text="@string/app_name" />

        <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyGridView
            android:id="@+id/itme_evaluate_gv"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/pading_10"
            android:paddingLeft="@dimen/pading_10"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/pading_4"
            android:numColumns="3"
            android:verticalSpacing="@dimen/pading_4" />
    </LinearLayout>


</LinearLayout>