<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/pading_6">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoRoundImageView
        android:id="@+id/itme_shoucang_shop_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:borderRadius="@dimen/pading_2"
        android:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_4"
        android:paddingLeft="@dimen/pading_10"
        android:paddingTop="@dimen/pading_4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/itme_shoucang_shop_tvname"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/pading_4"
            android:maxLines="3"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />


        <LinearLayout
            android:paddingTop="@dimen/pading_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_shoucang_shop_tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥00/斤"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/itme_shoucang_shop_tvoldprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pading_10"
                android:text="00/斤"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/itme_shoucang_shop_tvbuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan_mai_p"
                android:padding="@dimen/pading_4"
                android:text="@string/lijigoumai"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
