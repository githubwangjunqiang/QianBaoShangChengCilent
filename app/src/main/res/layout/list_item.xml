<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/pading_8">

        <ImageView
            android:id="@+id/itme_list_tv__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/pading_4"
            android:background="@drawable/jianhao"
            android:src="@mipmap/jianhao1" />

        <TextView
            android:id="@+id/itme_list_tvnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/pading_10"
            android:paddingRight="@dimen/pading_10"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp" />

        <ImageView
            android:id="@+id/itme_list_ivjiajia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/pading_5"
            android:background="@drawable/addcart"
            android:src="@mipmap/jiaohao1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pading_4"
        android:paddingLeft="@dimen/pading_10"
        android:paddingRight="@dimen/pading_10"
        android:paddingTop="@dimen/pading_4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
            android:id="@+id/itme_list_iviamge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:src="@mipmap/meishi" />

        <TextView
            android:id="@+id/itme_list_tvname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/pading_2"
            android:maxLines="3"
            android:paddingLeft="@dimen/pading_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="金饼回锅肉\n月售000\t\t赞00\n￥0" />
    </LinearLayout>
