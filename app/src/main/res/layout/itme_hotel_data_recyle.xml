<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_hotel_data_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pading_4">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoRoundImageView
        android:id="@+id/hotel_data_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:borderRadius="@dimen/pading_2"
        app:type="round"
        tools:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10">

        <TextView
            android:id="@+id/hotel_data_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp"
            tools:text="黔宝商城" />

        <TextView
            android:id="@+id/hotel_data_tvcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/pading_4"
            android:paddingTop="@dimen/pading_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="黔宝商城" />

        <TextView
            android:id="@+id/hotel_data_tvprice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_13sp"
            tools:text="起价￥：00，\t\t距离：00km" />
    </LinearLayout>
</LinearLayout>