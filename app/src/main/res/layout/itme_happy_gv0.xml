<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:id="@+id/itme_happy_gv0_ivimage"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/pading_10"
        android:layout_marginRight="@dimen/pading_10"
        android:layout_height="wrap_content"
        android:src="@mipmap/zuliao" />

    <TextView
        android:id="@+id/itme_happy_gv0_tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/zuliao"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12sp" />
</LinearLayout>