<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <com.yunyouzhiyuan.qianbaoshangchengclient.ui.DelayedClickImageView
                android:scaleType="fitXY"
                android:id="@+id/hotel_storinfo_mapview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ditu" />

            <TextView
                android:id="@+id/hotel_storinfo_tvaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/pading_4"
                android:paddingLeft="@dimen/pading_10"
                android:paddingTop="@dimen/pading_4"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_12sp"
                tools:text="通州区车站路17号" />
        </LinearLayout>

        <TextView
            android:id="@+id/hotel_storinfo_pingfen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_1"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/pading_4"
            android:padding="@dimen/pading_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="0.0分\n高于000%的同类酒店\n查看000条评论" />
    </LinearLayout>


    <TextView
        android:id="@+id/hotel_storinfo_tvphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading_1"
        android:background="@color/white"
        android:drawableRight="@mipmap/jinru"
        android:gravity="center_vertical"
        android:padding="@dimen/pading_10"
        android:text="@string/jiudiandianhau"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_13sp" />

    <LinearLayout
        android:id="@+id/hotel_storinfo_llnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/pading_16"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pading_10">

        <TextView
            android:id="@+id/hotel_storinfo_tvrutime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/pading_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="入住\n2000.07.01" />

        <TextView
            android:id="@+id/hotel_storinfo_tvnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_bianmkuang"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/pading_2"
            android:paddingBottom="@dimen/pading_4"
            android:paddingLeft="@dimen/pading_10"
            android:paddingRight="@dimen/pading_10"
            android:paddingTop="@dimen/pading_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="共0晚" />

        <TextView
            android:id="@+id/hotel_storinfo_tvlidiantime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/pading_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="离店\n2000.07.01" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ding"
        android:gravity="center_vertical"
        android:padding="@dimen/pading_10"
        android:text="@string/yudingfangjian"
        android:textSize="@dimen/text_size_14sp" />

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyListview
        android:id="@+id/hotel_storinfo_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/pading_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:divider="@color/background"
        android:dividerHeight="@dimen/pading_1" />

    <TextView
        android:id="@+id/hotel_storinfo_tvpingjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading_1"
        android:background="@color/white"
        android:drawableLeft="@mipmap/wenda"
        android:drawableRight="@mipmap/jinru"
        android:gravity="center_vertical"
        android:padding="@dimen/pading_10"
        android:text="@string/youshenmwenti"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_14sp" />
</LinearLayout>