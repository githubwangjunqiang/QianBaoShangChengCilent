<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pading_40"
        android:background="@drawable/yuan_dialog"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_30"
        android:paddingLeft="@dimen/pading_30"
        android:paddingRight="@dimen/pading_30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/pading_10"
            android:text="@string/dingdanqueren"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tvold_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="商品总价：\t\t\t\t￥000"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tvyou_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="优惠用券：\t\t\t\t￥000"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />
        <TextView
            android:id="@+id/tvyou_postfee"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="配送费用：\t\t\t\t￥000"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />


        <TextView
            android:id="@+id/tvnew_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="订单总价：\t\t\t\t￥000"
            android:textColor="@color/blue_p"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="支付方式：\t\t\t\t在线支付"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/pading_4">

            <TextView
                android:id="@+id/tvquxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:paddingBottom="@dimen/pading_4"
                android:paddingLeft="@dimen/pading_28"
                android:paddingRight="@dimen/pading_28"
                android:paddingTop="@dimen/pading_4"
                android:text="取消"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tvok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/pading_10"
                android:background="@color/background"
                android:paddingBottom="@dimen/pading_4"
                android:paddingLeft="@dimen/pading_28"
                android:paddingRight="@dimen/pading_28"
                android:paddingTop="@dimen/pading_4"
                android:text="确认"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>