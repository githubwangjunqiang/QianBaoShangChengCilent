<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itme_dingdan_tvstorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/stor"
        android:gravity="center_vertical"
        android:padding="@dimen/pading_6"
        android:text="@string/dingpumingcheng"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_14sp"
        />

    <TextView
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/itme_dingdan_tvtime"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_12sp"
        android:gravity="right|center_vertical"
        android:text="00.00.00."
        android:padding="@dimen/pading_6"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/jinru"
        />

</LinearLayout>