<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pading_46"
    android:background="@color/app_color"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/top_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:clickable="true"
        android:paddingLeft="@dimen/pading_10"
        android:paddingRight="@dimen/pading_10"
        android:src="@mipmap/fanhui" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button
            android:layout_centerInParent="true"
            android:id="@+id/top_sousuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuan_main_top_btn"
            android:drawableLeft="@mipmap/sousuo"
            android:gravity="center_vertical"
            android:minHeight="@dimen/pading_26"
            android:paddingLeft="@dimen/pading_10" />

        <TextView
            android:id="@+id/top_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>


    <ImageButton
        android:id="@+id/top_weizhi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_10"
        android:src="@mipmap/weizhi" />
    <TextView
        android:id="@+id/top_tvbianji"
        android:visibility="gone"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/bianji"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>