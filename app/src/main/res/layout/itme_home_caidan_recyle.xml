<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itme_home_caidan_recyle_top"
    android:orientation="vertical">

    <ImageView
        android:padding="@dimen/pading_8"
        android:id="@+id/itme_home_caidan_recyle_ivimage"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/caidanmeishi" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13sp"
        android:textColor="@color/text_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/itme_home_caidan_recyle_tvname"
        android:text="@string/meishi"/>

</LinearLayout>