<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_anchorGravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itme_address_tvmoren"
            android:layout_width="wrap_content"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_13sp"
            android:text="@string/moren"
            android:visibility="gone"
            android:layout_gravity="center"
            android:padding="@dimen/pading_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/itme_address_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/jinru"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/pading_6"
            android:maxLines="2"
            android:padding="@dimen/pading_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp"
            tools:text="旺旺网\t\t111****1111\n北京\t北京\t通州区东方国际大厦" />

    </LinearLayout>

    <TextView
        android:id="@+id/itme_address_tvdelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/app_color"
        android:drawableTop="@mipmap/delete"
        android:gravity="center"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_20"
        android:text="@string/shangchu"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13sp"
        android:visibility="gone" />
</FrameLayout>