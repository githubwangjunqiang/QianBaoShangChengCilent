<?xml version="1.0" encoding="utf-8"?>
<com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyNetScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yunyouzhiyuan.qianbaoshangchengclient.activity.KTVTuanGouActivity"
    tools:showIn="@layout/activity_ktvtuan_gou">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/tuangou_ratingbar"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginLeft="@dimen/pading_10"
                tools:rating="5" />

            <TextView
                android:id="@+id/tuangou_tvfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pading_10"
                android:text="00åˆ†"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tuangou_tvpinglun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@mipmap/jinru"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/pading_8"
                android:paddingRight="@dimen/pading_10"
                android:paddingTop="@dimen/pading_8"
                android:text="@string/chakanpinglun"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading_10"
            android:background="@color/white"
            android:padding="@dimen/pading_10"
            android:text="@string/taocan"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyRecyleView
            android:id="@+id/tuangou_recyletime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyRecyleView
                android:id="@+id/tuangou_recyletbiaoqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/pading_10"
                android:paddingRight="@dimen/pading_10"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:text="@string/baofangliebiao"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyListview
            android:id="@+id/tuangou_mylistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/background"
            android:dividerHeight="@dimen/pading_1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pading_1"
            android:layout_marginTop="@dimen/pading_10"
            android:background="@color/white"
            android:padding="@dimen/pading_10"
            android:text="@string/goumaixuzhi"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <WebView
            android:id="@+id/tuangou_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyNetScrollview>
