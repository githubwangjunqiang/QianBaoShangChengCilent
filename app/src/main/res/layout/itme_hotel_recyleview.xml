<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/itme_hotel_recyleview_ll"
    android:padding="@dimen/pading_4">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:id="@+id/itme_hotel_recyleview_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10">

        <TextView
            android:id="@+id/itme_hotel_recyleview_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/moumoujiudian"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/itme_hotel_recyleview_tvprice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="￥000起"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itme_hotel_recyleview_tvstas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="6.5分"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/itme_hotel_recyleview_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/m"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>