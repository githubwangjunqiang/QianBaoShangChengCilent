<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itme_near_recyle__ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pading_6">


    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:id="@+id/itme_near_recyle_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitXY"
        tools:src="@mipmap/meishi" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_4"
        android:paddingLeft="@dimen/pading_8"
        android:paddingTop="@dimen/pading_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_near_recyle_vioew_tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/itme_near_recyle_vioew_tvtuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pading_10"
                android:background="@color/app_color"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp"
                tools:text="荐" />

            <TextView
                android:id="@+id/itme_near_recyle_vioew_tvwai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pading_10"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp"
                tools:text="外" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/itme_near_recyle_vioew_ratbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                tools:rating="3" />

            <TextView
                android:id="@+id/itme_near_recyle_vioew_tvfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pading_10"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_12sp"
                tools:text="00分" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_near_recyle_vioew_tvnumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/damuzhi"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13sp"
                tools:text="@string/tuijian" />

            <TextView
                android:id="@+id/itme_near_recyle_vioew_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp"
                tools:text="@string/m" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>