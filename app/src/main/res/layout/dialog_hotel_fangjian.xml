<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog_hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_dialog_hotel_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_dialog_hotel_tvname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/pading_10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16sp"
            tools:text="0.0米大床房" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/dialogxiala"
            android:gravity="center_vertical"
            android:text="下拉此处退出"
            android:textColor="@color/text_color_alp"
            android:textSize="@dimen/text_size_12sp" />

        <ImageView
            android:id="@+id/ll_dialog_hotel_ivback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pading_10"
            android:src="@mipmap/chahao" />

    </LinearLayout>


    <WebView
        android:id="@+id/ll_dialog_hotel_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/pading_1"
        android:layout_marginTop="@dimen/pading_1"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ll_dialog_hotel_tvprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/pading_10"
            android:textColor="@color/blue_p"
            android:textSize="@dimen/text_size_14sp"
            tools:text="￥00" />

        <Button
            android:id="@+id/ll_dialog_hotel_btnok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_color"
            android:minHeight="@dimen/pading_1"
            android:padding="@dimen/pading_10"
            android:text="@string/yuyue"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>
</LinearLayout>