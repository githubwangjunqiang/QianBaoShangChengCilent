<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/itme_happy_recyle_ll"
    android:padding="@dimen/pading_4">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itme_happy_recyle_image"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_happy_recyle_tvname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/itme_happy_recyle_tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人均￥00"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/itme_happy_recyle_tvinfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="00元代金券/免费wifi!"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/itme_happy_recyle_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3" />

            <TextView
                android:id="@+id/itme_happy_recyle_tvstas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pading_10"
                android:text="0.0分"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/itme_happy_recyle_tvm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/m"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>