<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.TitleLayout
        android:id="@+id/food_out_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MySwLayout
        android:id="@+id/food_out_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/food_out_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:layout_collapseMode="parallax">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vapager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/rrrrrrlllll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/pading_10"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.design.widget.CollapsingToolbarLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/food_out_rec_menv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pading_160"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/pading_8"
                    android:paddingTop="@dimen/pading_8"
                    app:layout_scrollFlags="scroll" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pading_240"
                    android:background="@color/background"
                    android:orientation="horizontal"
                    android:padding="@dimen/pading_4"
                    app:layout_scrollFlags="scroll">

                    <ImageView
                        android:id="@+id/food_out_rl_ivhuodong0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        tools:src="@mipmap/meishi" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pading_2"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/food_out_rl_ivhuodong1"
                            android:layout_marginBottom="@dimen/pading_2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/meishi" />


                        <ImageView
                            android:id="@+id/food_out_rl_ivhuodong2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/meishi" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/pading_2"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/food_out_rl_ivhuodong3"
                            android:layout_marginBottom="@dimen/pading_2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/meishi" />


                        <ImageView
                            android:id="@+id/food_out_rl_ivhuodong4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/meishi" />


                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/food_out_rec_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/pading_6"
                    app:layout_scrollFlags="scroll" />

                <TextView
                    android:id="@+id/food_out_tvfujin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:padding="@dimen/pading_10"
                    android:text="附近推荐商家"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_13sp" />
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/food_out_xindian_rec_buttom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </android.support.design.widget.CoordinatorLayout>
    </com.yunyouzhiyuan.qianbaoshangchengclient.ui.MySwLayout>
</LinearLayout>
