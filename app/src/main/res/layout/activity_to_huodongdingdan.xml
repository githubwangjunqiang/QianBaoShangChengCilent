<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunyouzhiyuan.qianbaoshangchengclient.activity.ToDingdanActivity">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.TitleLayout
        android:id="@+id/dingdanhuodong_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dingdanhuodong_tvname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/pading_10"
                    android:textColor="@color/text_color_alp"
                    android:textSize="@dimen/text_size_13sp"
                    tools:text="徐老板私房菜二人餐" />

                <TextView
                    android:id="@+id/dingdanhuodong_tvdanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pading_10"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="￥000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/pading_10"
                    android:text="@string/shuliang"
                    android:textColor="@color/text_color_alp"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/dingdanhuodong_tvnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pading_10"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="1件" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/pading_10"
                    android:text="@string/xiaoji"
                    android:textColor="@color/text_color_alp"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/dingdanhuodong_tvxiaoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pading_10"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="￥000" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pading_10"
                    android:text="@string/zhifufanshi"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/pading_20"
                    android:text="@string/zaixianzhifu"
                    android:textColor="@color/text_color_alp"
                    android:textSize="@dimen/text_size_13sp" />
            </LinearLayout>

            <RadioGroup
                android:paddingLeft="@dimen/pading_10"
                android:id="@+id/dingdanhuodong_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_1"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dingdanhuodong_rg0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pading_1"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawableLeft="@mipmap/zhifubao"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pading_10"
                    android:text="@string/zhifubaozhifu"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14sp" />

                <RadioButton
                    android:id="@+id/dingdanhuodong_rg1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/weixin"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pading_10"
                    android:text="@string/weixinzhifu"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_14sp" />
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/pading_4"
                android:padding="@dimen/pading_10"
                android:text="@string/huodongddingdan"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

            <Button
                android:id="@+id/dingdanhuodong_btntijiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pading_30"
                android:background="@drawable/yuan_tijiao"
                android:gravity="center"
                android:minHeight="@dimen/pading_10"
                android:padding="@dimen/pading_10"
                android:text="@string/tijiaodingdan"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
