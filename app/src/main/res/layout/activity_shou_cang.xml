<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/app_color"
        android:layout_height="@dimen/pading_46" >
        <ImageButton
            android:id="@+id/top_ivback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:paddingLeft="@dimen/pading_10"
            android:paddingRight="@dimen/pading_10"
            android:src="@mipmap/fanhui" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/white"
            android:text="@string/wodeshoucang"/>
    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/shoucang_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/app_color"
        app:tabIndicatorHeight="@dimen/pading_2"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/app_color"
        app:tabTextColor="@color/text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/shoucang_vp"
        android:layout_marginTop="@dimen/pading_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
