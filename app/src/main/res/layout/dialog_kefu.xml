<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back_kefu"
    android:orientation="vertical"
    android:padding="@dimen/pading_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/kefudianhua"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pading_1"
        android:layout_marginTop="@dimen/pading_10"
        android:background="@color/background" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/dialog_kefu_listview"
        android:dividerHeight="@dimen/pading_1"
        android:divider="@color/background"
        android:layout_height="wrap_content" />

</LinearLayout>