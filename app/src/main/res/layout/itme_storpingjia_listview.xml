<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/pading_10">

    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoImageView
        android:id="@+id/itme_storpinglist_iviamge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10"
        android:paddingTop="@dimen/pading_6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_storpinglist_tvname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13sp"
                tools:text="昵称昵称昵称" />

            <TextView
                android:id="@+id/itme_storpinglist_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp"
                tools:text="2000.00.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading_4"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/itme_storpinglist_bar"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/itme_storpinglist_tvfenshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/pading_10"
                android:text=""
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_12sp"
                tools:text="0.0分" />
        </LinearLayout>

        <TextView
            android:id="@+id/itme_storpinglist_tvcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/pading_2"
            android:paddingTop="@dimen/pading_6"
            android:text="坡地上就富婆的司机佛盆地时间哦史蒂夫京东；司机富婆刷卡积分；顺利打开房间哦ask大家佛教i"
            android:textColor="@color/text_color_alp"
            android:textSize="@dimen/text_size_13sp" />

        <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyGridView
            android:id="@+id/itme_storpinglist_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading_8"
            android:horizontalSpacing="@dimen/pading_8"
            android:numColumns="3"
            android:verticalSpacing="@dimen/pading_8" />


    </LinearLayout>


</LinearLayout>