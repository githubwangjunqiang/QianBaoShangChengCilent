<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunyouzhiyuan.qianbaoshangchengclient.fragment_food.Fragment_foodpingjia">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pading_6"
                android:layout_marginTop="@dimen/pading_6"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax">

                <TextView
                    android:id="@+id/food_pingjia_tvzonghe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/pading_6"
                    android:padding="@dimen/pading_10"
                    android:text="4.7\n综合评分\n商家好评率99%"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_13sp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pading_1"
                    android:layout_weight="1.6"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/pading_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送评分"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_13sp" />

                        <RatingBar
                            android:id="@+id/food_pingjia_rat0"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/pading_10"
                            android:rating="3" />

                        <TextView
                            android:id="@+id/food_pingjia_tvstas0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/pading_10"
                            android:text="0.0分"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/text_size_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商家评分"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_13sp" />

                        <RatingBar
                            android:id="@+id/food_pingjia_rat1"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/pading_10"
                            android:rating="3" />

                        <TextView
                            android:id="@+id/food_pingjia_tvstas1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/pading_10"
                            android:text="0.0分"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/text_size_13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/food_pingjia_recyleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/pading_4"
        android:paddingRight="@dimen/pading_4"
        />


</LinearLayout>
