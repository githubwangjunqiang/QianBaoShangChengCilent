<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itme__recyle_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pading_4"
    android:paddingLeft="@dimen/pading_6"
    android:paddingRight="@dimen/pading_6"
    android:paddingTop="@dimen/pading_4">


    <com.yunyouzhiyuan.qianbaoshangchengclient.ui.AutoRoundImageView
        android:id="@+id/itme_near_recyle_vioew_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@mipmap/meishi"
        app:borderRadius="@dimen/pading_2"
        app:type="round"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_4"
        android:paddingLeft="@dimen/pading_8"
        android:paddingTop="@dimen/pading_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_near_tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/pading_4"
            android:paddingBottom="@dimen/pading_4"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/itme_near_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                tools:rating="3" />

            <TextView
                android:id="@+id/itme_near_tvfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pading_10"
                android:text="00åˆ†"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_near_tvnumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/damuzhi"
                android:gravity="center_vertical"
                android:text="@string/tuijian"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/itme_near_tvjuli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>