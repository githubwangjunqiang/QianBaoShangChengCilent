<com.yunyouzhiyuan.qianbaoshangchengclient.ui.MySwLayoutBoth xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:srl_direction="both">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vapager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/rrrrrrlllll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/pading_10"
                    android:orientation="horizontal">

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/pading_8"
                android:paddingTop="@dimen/pading_8" />

            <LinearLayout
                android:id="@+id/fragment_home_lltiantian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_1"
                android:layout_marginBottom="@dimen/pading_1"
                android:background="@drawable/hote_back"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/pading_6"
                android:paddingLeft="@dimen/pading_10"
                android:paddingRight="@dimen/pading_10"
                android:paddingTop="@dimen/pading_6"
                android:visibility="visible">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/meiwei"
                    android:gravity="center_vertical"
                    android:text="@string/tiantianmeiwei"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/main_tiantiangengduo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/jinru"
                    android:gravity="center_vertical"
                    android:text="@string/gengduomeiwei"
                    android:textColor="@color/text_color_alp"
                    android:textSize="@dimen/text_size_13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="@dimen/pading_4"
                android:paddingLeft="@dimen/pading_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pading_100"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/fragment_home_ivhuodong0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/pading_2"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/meishi" />


                <ImageView
                    android:id="@+id/fragment_home_ivhuodong1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/meishi" />
            </LinearLayout>

            <GridView
                android:paddingLeft="@dimen/pading_4"
                android:paddingRight="@dimen/pading_4"
                android:id="@+id/main_gv_meishi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_2"
                android:background="@color/white"
                android:horizontalSpacing="@dimen/pading_2"
                android:numColumns="4"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/dianjia"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/pading_1"
                android:layout_marginBottom="@dimen/pading_1"
                android:paddingBottom="@dimen/pading_6"
                android:paddingLeft="@dimen/pading_10"
                android:paddingRight="@dimen/pading_10"
                android:paddingTop="@dimen/pading_6"
                android:text="@string/fujindianjia"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_14sp"
                android:typeface="sans" />

            <com.yunyouzhiyuan.qianbaoshangchengclient.ui.MyListview
                android:id="@+id/main_myListview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/pading_1"
                android:background="@color/white"
                android:divider="@color/background"
                android:dividerHeight="@dimen/pading_1" />

        </LinearLayout>
    </ScrollView>
</com.yunyouzhiyuan.qianbaoshangchengclient.ui.MySwLayoutBoth>
